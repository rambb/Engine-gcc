<h1>Listing users</h1>

<% if notice %>
  <p id="notice" ><%= notice %></p>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>UAL</th>
    <th>Image url</th>
    <th>Signature</th>
    <th>Currency</th>
    <th>Boosters</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.ualevel %></td>
    <td><%= user.image_url %></td>
    <td><%= user.signature %></td>
    <td><%= user.currency %></td>
    <td><%= user.boosters %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

